<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
  <% else %>
<div id="main_body">
<h4><%=@title %></h4>

<p>
  <b><%= t('Description') %></b>
  <%= @allocation.description %>
</p>
<p>
  <b><%=t('Operator')%>:</b>
  <%= Authentify::User.find_by_id(@allocation.operator_id).name %>
</p>
<p>
  <b><%=t('Equipment')%>:</b>
  <%= ProcessAllocx.equipment_class.find_by_id(@allocation.equipment_id).name %>
</p>
<p>
  <b><%= t('Qty In') %></b>
  <%= @allocation.qty_in %>
</p>
<p>
  <b><%= t('Qty Out') %></b>
  <%= @allocation.qty_out %>
</p>
<p>
  <b><%= t('Active') %></b>
  <%= @allocation.active ? t('Yes') : t('No') %>
</p>
<p>
  <b><%= t('Last Updated By') %></b>
  <%= @allocation.last_updated_by.name if @allocation.last_updated_by_id.present? %>
</p>


  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :id => 'close', :class => BUTTONS_CLS['action'] %>
  
</div>

<% end %>
